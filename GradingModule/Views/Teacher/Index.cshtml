@model IEnumerable<Teacher>
@{
    ViewData["Title"] = "Index";
}

<h1>Teacher View</h1>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Teacher Name
            </th>
            <th>
                Teacher ID
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.name
                </td>
                <td width="30%">
                    @obj.id
                </td>
            </tr>
        }
    </tbody>

</table>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"></h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Teacher" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>

    <div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"></h2>
        </div>
        <div class="col-6 text-end">
                <a asp-controller="Teacher" asp-action="Update" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Update Marks
            </a>
        </div>
    </div>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary"></h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Teacher" asp-action="SetGrade" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Set Grade
                </a>
            </div>
        </div>
        <br /><br />



