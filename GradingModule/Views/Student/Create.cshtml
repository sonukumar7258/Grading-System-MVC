@model GradingModule.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Student View</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="stud_id" class="control-label"></label>
                <input asp-for="stud_id" class="form-control" />
                <span asp-validation-for="stud_id" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="course_id" class="control-label"></label>
                <input asp-for="course_id" class="form-control" />
                <span asp-validation-for="course_id" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="GetCategories" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

